<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title translate="true">Probando KnockoutJS</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="CTA\Noticias\Block\Test" name="test_index"
                   template="CTA_Noticias::test.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="test" xsi:type="array">
                                <item name="component" xsi:type="string">
                                    CTA_Noticias/js/view/test
                                </item>
                                <item name="displayArea" xsi:type="string">
                                    test
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
